<nav id="nav-route" class="navbar fixed-top navbar-light bg-light">
  <a class="navbar-brand" href="/route-search">
    <img src="/images/purple-stars.png" width="30" height="30" class="d-inline-block align-top" alt="logo"
      loading="lazy">
    {{title}}
  </a>
  <form method="POST" action="/logout">
    <button id="logout-route" class="btn btn-info" type="submit">Log Out</button>
  </form>
</nav>

<div style="margin-top: 10vh">
  <br>
  <h1 class="details-title">{{streetart.name_description}}</h1>
  <p><img src={{streetart.imageUrl}} class="graffiti" alt={{streetart.name_description}}>
    <hr>
  <div style="margin-left: 10vw">
    <p>Art by: {{streetart.artist}}</p>
    <p>Summary: {{streetart.name_description}}</p>
    <p>Address: {{streetart.address}}</p>
    <p>Latitude: {{streetart.latitude}}</p>
    <p>Longitude: {{streetart.longitude}}</p>
    <p>Other Location Notes: {{streetart.other_location_note}}</p>
    <p>Comment: {{streetart.comment}}</p>
    <hr>
  </div>
  <div style="margin-left: 10vw">
    <p>Have you seen it? Add your review:</p>
    <form action="/reviews/{{streetart._id}}/add" method="POST">
      <label>
        User
        <input type="text" name="user">
      </label>
      <label>
        Comment
        <textarea name="comment"></textarea>
      </label>
      <button type="submit">Add Comment</button>
    </form>
    {{!-- use each bc reviews are in an array: --}}
    {{#each streetart.reviews}}
    <div>
      <p>{{this.comment}} - {{this.user}}</p>
    </div>
    {{/each}}
    <br>
  </div>
</div>
<div class="links-create">
  <a href="/route-search"> ⇦ Back to route map</a>
  <br>
  <a href="/streetarts"> ⇦ List of all street art</a>
</div>